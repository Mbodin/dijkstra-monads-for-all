{
	"name": "dijkstra-monads-for-all",
	"version": "1.0",
	"description": "Coq develpment of the paper: DÄ³kstra monads for all",
	"esy": {
		"buildEnv": {
			"DESTDIR": "#{self.install}",
			"COQBIN": "#{@opam/coq.bin}/",
			"COQLIB": "#{@opam/coq.lib}/coq/",
			"COQPATH": "#{coq-equations.lib}/coq/user-contrib"
		},
		"build": "make",
		"install": "make install",
		"buildsInSource": true
	},
	"dependencies": {
		"@opam/coq": "~8.11",
		"coq-equations": "*"
	},
	"resolutions": {
		"coq-equations": {
			"source": "github:mattam82/Coq-Equations#136e2babe0399867ed4ddc2e89857d773bc92ddb",
			"override": {
				"dependencies": {
					"@opam/coq": "~8.11"
				},
				"buildsInSource": true,
				"buildEnv": {
					"HOME": "#{self.target_dir}",
					"COQBIN": "#{@opam/coq.bin}/",
					"COQLIB": "#{@opam/coq.lib}/coq/",
					"COQMF_WINDRIVE": "#{@opam/coq.lib}/coq/",
					"DESTDIR": "#{self.install}"
				},
				"build": [
					["coq_makefile", "-f", "_CoqProject", "-o", "Makefile.coq", "-install", "user", "DESTDIR", "=", "#{self.install}"],
					["make", "-j2"],
					["make", "install"]
				]
			}
		}
	}
}
